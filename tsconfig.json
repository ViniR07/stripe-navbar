{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "lib": ["DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "@types": ["src/@types"]
    },
    "baseUrl": "."
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "*.js"]
}
